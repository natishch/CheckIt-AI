# Google Custom Search API Configuration
# Get your API key from: https://developers.google.com/custom-search/v1/introduction
# Get your CSE ID from: https://programmablesearchengine.google.com/
# Note: The same API key is used for both Google Search and Fact Check APIs
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CSE_ID=your_custom_search_engine_id_here

# Search Engine Configuration
# Enable Google Fact Check Tools API for professional fact-checks (true/false)
# Fact Check API aggregates from PolitiFact, Snopes, FactCheck.org, etc.
USE_FACT_CHECK_API=true

# Enable DuckDuckGo fallback when Google quota is exceeded (true/false)
USE_DUCKDUCKGO_BACKUP=false

# Application Configuration
LOG_LEVEL=INFO
CACHE_DIR=./cache
MODEL_DIR=./models

# Search Configuration
MAX_SEARCH_RESULTS=10
SEARCH_TIMEOUT=30

# Cache Configuration
CACHE_TTL_HOURS=24

# Language Configuration
# Default language for fact-check searches (ISO 639-1 codes)
# Options: en (English), he (Hebrew), ar (Arabic), es (Spanish), fr (French), de (German), etc.
DEFAULT_LANGUAGE=en

# Fallback language when no results found in default language
# Useful for non-English searches to fall back to English if local fact-checks unavailable
FALLBACK_LANGUAGE=en

# LLM Configuration (if using external API providers)
# OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
