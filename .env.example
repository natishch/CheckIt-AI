# Google Custom Search API Configuration
# Get your API key from: https://developers.google.com/custom-search/v1/introduction
# Get your CSE ID from: https://programmablesearchengine.google.com/
# Note: The same API key is used for both Google Search and Fact Check APIs
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CSE_ID=your_custom_search_engine_id_here

# Search Engine Configuration
# Enable Google Fact Check Tools API for professional fact-checks (true/false)
# Fact Check API aggregates from PolitiFact, Snopes, FactCheck.org, etc.
USE_FACT_CHECK_API=true

# Enable DuckDuckGo fallback when Google quota is exceeded (true/false)
USE_DUCKDUCKGO_BACKUP=false

# Application Configuration
LOG_LEVEL=INFO
CACHE_DIR=./cache
MODEL_DIR=./models

# Search Configuration
MAX_SEARCH_RESULTS=10
SEARCH_TIMEOUT=30

# Cache Configuration
CACHE_TTL_HOURS=24

# Language Configuration
# Default language for fact-check searches (ISO 639-1 codes)
# Options: en (English), he (Hebrew), ar (Arabic), es (Spanish), fr (French), de (German), etc.
DEFAULT_LANGUAGE=en

# Fallback language when no results found in default language
# Useful for non-English searches to fall back to English if local fact-checks unavailable
FALLBACK_LANGUAGE=en

# =============================================================================
# Writer LLM Configuration (AH-07)
# =============================================================================
# Choose your LLM provider: openai, anthropic, google, or local
# Default is "local" for presentation demos using LM Studio
WRITER_LLM_PROVIDER=local

# OpenAI Configuration (required if WRITER_LLM_PROVIDER=openai)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Anthropic Configuration (required if WRITER_LLM_PROVIDER=anthropic)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Google Generative AI Configuration (required if WRITER_LLM_PROVIDER=google)
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_GENAI_API_KEY=your_google_genai_api_key_here
GOOGLE_GENAI_MODEL=gemini-1.5-flash

# Local LLM Configuration (for LM Studio / Ollama / vLLM)
# Default URL for LM Studio's OpenAI-compatible API
LOCAL_LLM_BASE_URL=http://127.0.0.1:1234/v1
LOCAL_LLM_MODEL=local-model
LOCAL_LLM_API_KEY=not-needed

# Common LLM Settings
# Temperature: 0.0=deterministic, 0.3=balanced (default), higher=creative
WRITER_LLM_TEMPERATURE=0.3
WRITER_LLM_MAX_TOKENS=1024
WRITER_LLM_TIMEOUT=60
